#!/usr/bin/ruby

#
# couchdb - eventasaurus consumer plugin to send event notifications to couchdb
#
# TODO: abstract host - everything goes to hostname couchdb presently
#

$LOAD_PATH.unshift File.expand_path(File.join(File.dirname(__FILE__), "..", "lib"))
require 'rubygems'
require 'eventasaurus'
require 'trollop'
require 'digest/md5'
require 'time'
require 'net/http'
require 'json'
require 'daemons'

opts = Trollop::options do
  banner <<-EOS
daemon to send eventasaurus notifications to couchdb

Usage:
       couchdb [options]
  EOS
end


#Couchdb stuff
@host = "couchdb"
@port = 5984

def request(req)
  res = Net::HTTP.start(@host, @port) { |http|http.request(req) }
  unless res.kind_of?(Net::HTTPSuccess)
    handle_error(req, res)
  end
  res
end

def handle_error(req, res)
  e = RuntimeError.new("#{res.code}:#{res.message}\nMETHOD:#{req.method}\nURI:#{req.path}\n#{res.body}")
  raise e
end

def put(uri, json)
  req = Net::HTTP::Put.new(uri)
  req["content-type"] = "application/json"
  req.body = json
  request(req)
end

process = 'couchdb'
server = 'event'
topic = 'eventasaurus'

options = { 
  :dir_mode => :system,
  :log_dir => "/var/log/",
  :log_output => true
}

Daemons.run_proc(process, options) do
  puts Time.now.utc.iso8601+" couchdb starting up"
  stomp = Eventasaurus::Consumer.new(topic, process, server)
  loop do
    begin
      msg = stomp.get
      uri = "/eventasaurus/" + Time.now.utc.iso8601 + "_" + Digest::MD5.hexdigest(msg['message'])
      put(uri, msg.to_json)
    rescue Exception
      stomp.close
      puts Time.now.utc.iso8601, $!, $@
    end
    puts Time.now.utc.iso8601+" couchdb stopped"
  end
end

